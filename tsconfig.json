{
  "include": ["src/**/*"],
  "exclude": ["*.spec.ts", "*.test.ts"],
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "declaration": true,
    "emitDeclarationOnly": true,
  }
}
